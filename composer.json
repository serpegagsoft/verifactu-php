{
  "name": "serpegagsoft/verifactu-php",
  "description": "Librería para la integración del sistema de la agencia tributaria española \"Veri*factu\" (verifactu) Fork adaptado para PHP 7.x",
  "type": "library",
  "require": {
    "bacon/bacon-qr-code": "^3",
    "robrichards/xmlseclibs": "^3.0",
    "php": ">=7.4",
    "ext-soap": "*",
    "ext-libxml": "*",
    "ext-openssl": "*",
    "ext-dom": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "eseperio\\verifactu\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "eseperio\\verifactu\\tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Sergio Pérez",
      "email": "serpega1@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "scripts": {
    "test": "phpunit"
  },
  "scripts-descriptions": {
    "test": "Run the unit tests using PHPUnit"
  }
}
